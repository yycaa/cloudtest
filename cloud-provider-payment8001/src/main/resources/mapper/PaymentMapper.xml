<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="yyc.springcloud.dao.PaymentDao">
<insert id="creat" parameterType="Payment" useGeneratedKeys="true" keyProperty="id" >
    insert into payment (serial) values (#{serial});
</insert>
    <resultMap id="paymentmap" type="Payment" >
        <id column="id" property="id" jdbcType="INTEGER"/>
        <id column="serial" property="serial" jdbcType="VARCHAR"/>
    </resultMap>
<select id="getPaymentById" parameterType="Long" resultMap="paymentmap">
    select * from payment where id=#{id};
</select>

</mapper>